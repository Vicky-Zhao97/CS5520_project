<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_diet_item_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:minWidth="100dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_diet_item_kcal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_diet_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_diet_item_kcal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_diet_item_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_diet_item_delete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_diet_item_name"
        app:layout_constraintTop_toTopOf="@+id/tv_diet_item_name"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/btn_diet_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?android:selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/tv_diet_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_diet_item_kcal"
        app:layout_constraintTop_toTopOf="@+id/tv_diet_item_name"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_delete" />

    <TextView
        android:id="@+id/tv_diet_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:minWidth="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="--"
        app:layout_constraintBottom_toBottomOf="@+id/tv_diet_item_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_diet_item_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_diet_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>