<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoseIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#498F53</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#4CAF50</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- theme for start activity-->
    <style name="lose_it_start_activity" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置statusBarColor 为透明-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlActivated">#4CAF50</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="lose_it_edit_text">
        <item name="android:minWidth">260dp</item>
        <item name="android:minHeight">48dp</item>

    </style>

    <style name="lose_it_btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:minWidth">160dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!--    loading dialog-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>